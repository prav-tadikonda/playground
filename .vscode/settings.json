{
  "files.exclude": {
      "**/.git": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/CVS": true,
      "**/.DS_Store": true,
      "jspm_packages": true,
      "node_modules": true,
      "{build,dist}/": true,
  },
  "search.exclude": {
      "**/node_modules": true,
      "**/bower_components": true
  },
  "editor.renderWhitespace": "all",
  "editor.tabSize": 2,
  "editor.multiCursorModifier": "alt",
  "editor.wordWrap": "on",
  "editor.insertSpaces": true,
  "workbench.colorCustomizations": {
      "activityBar.background": "#74bef0",
      "activityBar.activeBorder": "#74bef0",
      "activityBar.foreground": "#e7e7e7",
      "activityBar.inactiveForeground": "#e7e7e799",
      "activityBarBadge.background": "#5e0eb1",
      "activityBarBadge.foreground": "#e7e7e7",
      "titleBar.activeBackground": "#74bef0",
      "titleBar.inactiveBackground": "#74bef0",
      "titleBar.activeForeground": "#e7e7e7",
      "titleBar.inactiveForeground": "#e7e7e799",
      "statusBar.background": "#74bef0",
      "statusBarItem.hoverBackground": "#74bef0",
      "statusBar.foreground": "#e7e7e7",
      "activityBar.activeBackground": "#74bef0"
  },
  "[typescript]": {
      "editor.formatOnSave": true,
      "editor.formatOnPaste": true
  },
  "[markdown]": {
      "editor.formatOnSave": true,
      "editor.renderWhitespace": "all",
      "editor.acceptSuggestionOnEnter": "off"
  },
  "peacock.color": "#075a30",
}
